<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="70dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="40dp"
                android:layout_height="320dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp"
                android:id="@+id/developer1">

                <ImageButton
                    android:id="@+id/developerIB1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/developer1"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:layout_marginTop="-50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:fontFamily="casual"
                    android:text="Abhinay Shrivastav"
                    android:textColor="#0000ff"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="75dp"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text=" B.Tech (IT 2nd Year)"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="110dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="Institute of Engineering &amp; Technology (IET), Lucknow"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="40dp"
                android:layout_height="320dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="340dp"
                android:id="@+id/developer2">

                <ImageButton
                    android:id="@+id/developerIB2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/developer2"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:layout_marginTop="-50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:fontFamily="casual"
                    android:text="Harshal Dev"
                    android:textColor="#0000ff"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="75dp"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text=" B.Tech (CSE 2nd Year)"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="110dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="Institute of Engineering &amp; Technology (IET), Lucknow"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
