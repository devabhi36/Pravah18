<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="70dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp">

                <TextView
                    android:id="@+id/dname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-30dp"
                    android:fontFamily="cursive"
                    android:hint="FULL NAME"
                    android:textColor="@color/aasmaani"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/dyouare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="YOU ARE"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dzone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="ZONE"
                    android:textSize="20dp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="40dp"
                android:layout_height="230dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="120dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-90dp"
                    android:fontFamily="serif-monospace"
                    android:text="Personal Details"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/dgender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-55dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="GENDER"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/ddob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-25dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="DOB"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/dphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="PHONE"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/dfather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="65dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint=""
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/dmother"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="95dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint=""
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/demail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="EMAIL"
                    android:textSize="20dp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="40dp"
                android:layout_height="364dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="370dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-90dp"
                    android:fontFamily="serif-monospace"
                    android:text="Other Info"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/dcollege"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-55dp"
                    android:fontFamily="monospace"
                    android:hint="COLLEGE"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/daadhaar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-15dp"
                    android:fontFamily="monospace"
                    android:hint="AADHAAR NO"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/drollno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="monospace"
                    android:hint=""
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/devents1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="45dp"
                    android:fontFamily="monospace"
                    android:hint=""
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/devents2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="75dp"
                    android:fontFamily="monospace"
                    android:hint=""
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/devents3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="105dp"
                    android:fontFamily="monospace"
                    android:hint=""
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/dtshirt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="132dp"
                    android:fontFamily="monospace"
                    android:hint="Tshirt"
                    android:textSize="20dp" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
