<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        app:menu="@menu/navigation" />
    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_above="@id/navigation"
        android:background="#000000">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#000000">

                <android.support.v7.widget.CardView
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:id="@+id/c1"
                    android:background="#000000"
                    android:paddingRight="5dp">
                    <ImageButton
                        android:id="@+id/theme"
                        android:layout_width="159dp"
                        android:layout_height="243dp"
                        android:layout_gravity="center"
                        android:onClick="theme"
                        android:src="@drawable/theme" />

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/c2"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/c1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <ImageButton
                        android:id="@+id/events"
                        android:layout_width="159dp"
                        android:layout_height="243dp"
                        android:src="@drawable/events"
                        android:onClick="events"
                        android:layout_gravity="center"/>


                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/c3"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/c2">

                    <ImageButton
                        android:id="@+id/schedule"
                        android:layout_width="159dp"
                        android:layout_height="243dp"
                        android:src="@drawable/schedule"
                        android:onClick="schedule"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/c5"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/c3">

                    <ImageButton
                        android:id="@+id/map"
                        android:layout_width="159dp"
                        android:layout_height="243dp"
                        android:src="@drawable/maps"
                        android:onClick="map"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/c6"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/c5">

                    <ImageButton
                        android:id="@+id/about"
                        android:layout_width="159dp"
                        android:layout_height="243dp"
                        android:onClick="about"
                        android:src="@drawable/about"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                android:id="@+id/c7"
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/c6">

                <ImageButton
                    android:id="@+id/contact"
                    android:layout_width="159dp"
                    android:layout_height="243dp"
                    android:src="@drawable/contact"
                    android:onClick="contact"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/c8"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/c7">

                    <ImageButton
                        android:id="@+id/post"
                        android:layout_width="159dp"
                        android:layout_height="243dp"
                        android:src="@drawable/feedback"
                        android:onClick="feedback"
                        android:layout_gravity="center" />

                </android.support.v7.widget.CardView>


            </RelativeLayout>

        </HorizontalScrollView>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:layout_above="@+id/buttons">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_marginBottom="0dp"/>
    </LinearLayout>

</RelativeLayout>