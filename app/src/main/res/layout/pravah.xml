<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />
    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_above="@id/navigation"
        android:background="#000000">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#000000">

                <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/c1"
                    android:background="#000000"    >

                <ImageButton
                    android:id="@+id/theme"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:onClick="theme"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/c2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/c1">

                    <ImageButton
                        android:id="@+id/events"
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"
                        android:onClick="events" />


                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/c3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/c2">

                    <ImageButton
                        android:id="@+id/schedule"
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"
                        android:onClick="schedule"/>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/c4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/c3">

                    <ImageButton
                        android:id="@+id/gallery"
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:onClick="gallery"
                        android:src="@mipmap/ic_launcher" />

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/c5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/c4">

                    <ImageButton
                        android:id="@+id/map"
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"
                        android:onClick="map"/>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/c6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/c5">

                    <ImageButton
                        android:id="@+id/about"
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:onClick="about"
                        android:src="@mipmap/ic_launcher" />

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                android:id="@+id/c7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/c6">

                <ImageButton
                    android:id="@+id/contact"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:onClick="contact"/>

            </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/c8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/c7">

                    <ImageButton
                        android:id="@+id/post"
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"
                        android:onClick="post"/>

                </android.support.v7.widget.CardView>


            </RelativeLayout>

        </HorizontalScrollView>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:layout_above="@+id/buttons">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_marginBottom="0dp"/>
    </LinearLayout>

</RelativeLayout>